{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "type": "template-form",
                  "name": "form0",
                  "components": [
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Created On",
                              "component": "CreatedOn",
                              "name": "CreatedOnLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "DateTime",
                              "dateFormat": "dd/MM/yyyy",
                              "type": "datepicker",
                              "name": "CreatedOn",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "value": "${product.CreatedOn}"
                            },
                            {
                              "type": "required-validator",
                              "name": "CreatedOnRequiredValidator",
                              "component": "CreatedOn",
                              "text": "CreatedOn is required",
                              "style": {
                                "position": "absolute"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Modified On",
                              "component": "ModifiedOn",
                              "name": "ModifiedOnLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "DateTime?",
                              "dateFormat": "dd/MM/yyyy",
                              "type": "datepicker",
                              "name": "ModifiedOn",
                              "style": {
                                "width": "100%"
                              },
                              "value": "${product.ModifiedOn}"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Is Deleted",
                              "component": "IsDeleted",
                              "name": "IsDeletedLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "bool",
                              "type": "checkbox",
                              "name": "IsDeleted",
                              "value": "${product.IsDeleted}"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Deleted On",
                              "component": "DeletedOn",
                              "name": "DeletedOnLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "DateTime?",
                              "dateFormat": "dd/MM/yyyy",
                              "type": "datepicker",
                              "name": "DeletedOn",
                              "style": {
                                "width": "100%"
                              },
                              "value": "${product.DeletedOn}"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Name",
                              "component": "Name",
                              "name": "NameLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "string",
                              "maxLength": 50,
                              "type": "textbox",
                              "name": "Name",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "value": "${product.Name}"
                            },
                            {
                              "type": "required-validator",
                              "name": "NameRequiredValidator",
                              "component": "Name",
                              "text": "Name is required",
                              "style": {
                                "position": "absolute"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Description",
                              "component": "Description",
                              "name": "DescriptionLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "string",
                              "maxLength": 1000,
                              "type": "textbox",
                              "name": "Description",
                              "style": {
                                "width": "100%"
                              },
                              "value": "${product.Description}"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Image Source",
                              "component": "ImageSource",
                              "name": "ImageSourceLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "string",
                              "maxLength": 2048,
                              "type": "textbox",
                              "name": "ImageSource",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "value": "${product.ImageSource}"
                            },
                            {
                              "type": "required-validator",
                              "name": "ImageSourceRequiredValidator",
                              "component": "ImageSource",
                              "text": "ImageSource is required",
                              "style": {
                                "position": "absolute"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Quantity",
                              "component": "Quantity",
                              "name": "QuantityLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "int",
                              "type": "numeric",
                              "name": "Quantity",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "value": "${product.Quantity}"
                            },
                            {
                              "type": "required-validator",
                              "name": "QuantityRequiredValidator",
                              "component": "Quantity",
                              "text": "Quantity is required",
                              "style": {
                                "position": "absolute"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Price",
                              "component": "Price",
                              "name": "PriceLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "decimal",
                              "type": "numeric",
                              "name": "Price",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "value": "${product.Price}"
                            },
                            {
                              "type": "required-validator",
                              "name": "PriceRequiredValidator",
                              "component": "Price",
                              "text": "Price is required",
                              "style": {
                                "position": "absolute"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Category",
                              "component": "CategoryId",
                              "name": "CategoryIdLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "data": "${getCategoriesForCategoryIdResult}",
                              "textProperty": "Name",
                              "valueProperty": "Id",
                              "placeholder": "Choose Category",
                              "valueType": "int",
                              "showSearch": false,
                              "count": "${getCategoriesForCategoryIdCount}",
                              "type": "dropdown-datagrid",
                              "name": "CategoryId",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "events": {
                                "loadData": [
                                  {
                                    "name": "net5wasmconn.getCategories",
                                    "parameters": [
                                      {
                                        "name": "$top",
                                        "value": "${event.top}"
                                      },
                                      {
                                        "name": "$skip",
                                        "value": "${event.skip}"
                                      },
                                      {
                                        "name": "$orderby",
                                        "value": "${event.orderby}"
                                      },
                                      {
                                        "name": "$filter",
                                        "value": "${event.filter}"
                                      },
                                      {
                                        "name": "$count",
                                        "value": "true"
                                      }
                                    ],
                                    "then": [
                                      {
                                        "name": "getCategoriesForCategoryIdResult",
                                        "type": "set",
                                        "value": "${result.Value.AsODataEnumerable()}",
                                        "valueType": "IEnumerable<Net5Wasm.Models.Net5Wasmconn.Category>"
                                      },
                                      {
                                        "name": "getCategoriesForCategoryIdCount",
                                        "type": "set",
                                        "value": "result.Count"
                                      }
                                    ],
                                    "type": "invoke"
                                  }
                                ]
                              },
                              "value": "${product.CategoryId}"
                            },
                            {
                              "type": "required-validator",
                              "name": "CategoryIdRequiredValidator",
                              "component": "CategoryId",
                              "text": "CategoryId is required",
                              "style": {
                                "position": "absolute"
                              },
                              "defaultValue": "0"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "components": [
                        {
                          "type": "col",
                          "class": "col offset-sm-3",
                          "components": [
                            {
                              "type": "button",
                              "buttonType": "submit",
                              "icon": "save",
                              "text": "Save",
                              "buttonStyle": "primary"
                            },
                            {
                              "type": "button",
                              "buttonStyle": "light",
                              "style": {
                                "marginLeft": "1rem"
                              },
                              "text": "Cancel",
                              "events": {
                                "click": [
                                  {
                                    "type": "close-popup"
                                  }
                                ]
                              }
                            }
                          ]
                        }
                      ]
                    }
                  ],
                  "events": {
                    "submit": [
                      {
                        "error": [
                          {
                            "detail": "Unable to create new Product!",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "net5wasmconn.createProduct",
                        "parameters": [
                          {
                            "name": "Product",
                            "value": "${product}"
                          }
                        ],
                        "then": [
                          {
                            "type": "close-popup",
                            "result": "${product}"
                          }
                        ],
                        "type": "invoke"
                      }
                    ]
                  },
                  "data": "${product}",
                  "visible": "${product != null}",
                  "itemType": "Net5Wasm.Models.Net5Wasmconn.Product"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "name": "product",
        "type": "set",
        "value": "new Net5Wasm.Models.Net5Wasmconn.Product(){}",
        "valueType": "Net5Wasm.Models.Net5Wasmconn.Product"
      }
    ]
  },
  "name": "Add Product",
  "access": [
    "Authenticated"
  ],
  "layout": "Main"
}